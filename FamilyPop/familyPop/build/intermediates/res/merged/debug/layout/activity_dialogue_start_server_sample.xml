<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_default_background"
    android:weightSum="1">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_start_server_topmenu_home"
            android:background="@drawable/button_topmenu_setting"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView34"
            android:layout_centerHorizontal="true"
            android:background="@drawable/text_server_dialogue"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton5"
            android:background="@drawable/button_top_menu"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp" />
    </FrameLayout>

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="BIRTHDAY DINNER"
    android:id="@+id/textView11"
    android:textColor="@color/color_default_string"
    android:background="@drawable/background_textbox0"
    android:layout_weight="0.02"
    android:enabled="true"
    android:paddingTop="10dp"
    android:layout_above="@+id/imageView29"
    android:layout_centerHorizontal="true"
    android:visibility="gone"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="000.000.000.000"
        android:id="@+id/ServerIPText"
        android:textColor="@color/color_default_string"
        android:paddingTop="10dp"
        android:layout_below="@+id/imageView29"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_start_server_next"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_next_on"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:visibility="gone"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_start_server_topmenu_homse"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_home"
        android:visibility="gone"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_topmenu_setting"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView27"
        android:layout_centerHorizontal="true"
        android:background="@drawable/text_start_a_dialogue"
        android:layout_marginTop="15dp"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView28"
        android:background="@drawable/text_name"
        android:layout_above="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView29"
        android:background="@drawable/text_server_is_ready"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>