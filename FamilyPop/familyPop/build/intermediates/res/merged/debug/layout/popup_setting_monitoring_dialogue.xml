<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:clickable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout5"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView28"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="clam on"
            android:id="@+id/checkBox_systemEvent_clam"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:layout_below="@+id/textView28"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="clam_pair on"
            android:id="@+id/checkBox_systemEvent_clamPair"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:layout_below="@+id/checkBox_systemEvent_clam"
            android:layout_alignParentStart="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout5">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:id="@+id/button_systemEvent_cancel"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="send"
            android:id="@+id/button_systemEvent_send"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>