<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:background="#80808000">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:layout_gravity="top|left"
        android:id="@+id/top_layout"
        android:background="@drawable/background_topmenu">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="pdqbXMIl_m14_16_5"
            android:id="@+id/text_profile_name"
            android:textColor="@color/color_white"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/bottom_layout"
        android:background="@drawable/background_bottommenu"
        android:layout_below="@+id/top_layout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_popup_status"
                android:background="@drawable/button_popup_status"
                android:layout_marginLeft="15dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_popup_account"
                android:background="@drawable/button_popup_account"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_popup_setting"
                android:background="@drawable/button_popup_setting"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
